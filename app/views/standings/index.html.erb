<% @include_javascript = true %>
<h1><%=h @title = @room.title %></h1>
<div id="vote">
  <form action="<%= room_votes_path(@room) %>" method="post">
    <label class="first"><span tabindex="0"><input type="radio" name="stars" value="1"><span>Kinda<br>Meh</span></span></label>
    <label><span tabindex="0"><input type="radio" name="stars" value="2"><span>Not<br>bad</span></span></label>
    <label><span tabindex="0"><input type="radio" name="stars" value="3"><span>Rather<br>good</span></span></label>
    <label><span tabindex="0"><input type="radio" name="stars" value="4"><span>Very<br>nice</span></span></label>
    <label class="last"><span tabindex="0"><input type="radio" name="stars" value="5"><span>Totally<br>awesome</span></span></label>
  </form>
  <div class="clear"></div>
</div>
<div id="progress"><div></div></div>
<div id="results"></div>
<div class="clear"></div>